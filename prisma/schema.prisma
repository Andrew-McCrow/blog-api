generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  idUser   Int        @id @default(autoincrement())
  email    String     @unique
  password String
  isAdmin  Boolean    @default(false)
  posts    BlogPost[]
  comments Comment[]
}

model BlogPost {
  idBlog      Int       @id @default(autoincrement())
  blogTitle   String
  blogPost    String
  timeStamp   DateTime  @default(now())
  isPublished Boolean   @default(false)
  idUser      Int
  author      User      @relation(fields: [idUser], references: [idUser])
  comments    Comment[]
}

model Comment {
  idComment   Int      @id @default(autoincrement())
  commentPost String
  timeStamp   DateTime @default(now())
  idUser      Int
  idBlog      Int
  user        User     @relation(fields: [idUser], references: [idUser])
  blog        BlogPost @relation(fields: [idBlog], references: [idBlog])
}
